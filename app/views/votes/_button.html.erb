<% if current_user && idea.voted_on_by?(current_user) %>
  <button type="button" class="btn btn-default btn-xs vote voted">
      <%= idea.current_vote %> votes
  </button>
<% elsif current_user %>
  <%= button_to({ :controller => 'votes', :action => "create", :idea_id => idea.id }, :remote => true, :class => "btn btn-default btn-xs vote") do %>
    <span class="glyphicon glyphicon-thumbs-up" aria-hidden="true"></span> <%= idea.current_vote %>
  <% end %>
<% else %>
  <button type="button" class="btn btn-default btn-xs vote voted" disabled="disabled">
    <%= idea.current_vote %> votes
  </button>
<% end %>
